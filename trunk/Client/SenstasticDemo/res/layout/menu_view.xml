<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/background"
	    android:theme="@android:style/Theme.Black.NoTitleBar">

	    <TextView
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="center"
	    	android:layout_width="wrap_content" 
	    	android:text="@string/app_name" 
	    	android:textSize="30sp"
	    	android:textColor="#FFFFFF" 
	    	android:textStyle="bold"
	    	android:padding="20dp"/>

	    <Button 
	       	android:id="@+id/menuViewAggregateMapButton"
	    	android:text="Aggregate Map"
        	android:textSize="20sp"
        	android:layout_width="250dp" 
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"/>
        	
       	<Button
       	   	android:id="@+id/menuViewPersonalMapButton" 
       		android:text="Personal Map"
        	android:textSize="20sp"
        	android:layout_width="250dp" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center"/>
       	
       	<Button
       	   	android:id="@+id/menuViewActivityLogButton" 
       		android:text="Activity Log"
        	android:textSize="20sp"
        	android:layout_width="250dp" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center"/>  
       	
       	<Button
       	   	android:id="@+id/menuViewAboutButton" 
       		android:text="About"
        	android:textSize="20sp"
        	android:layout_width="250dp" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center"/>      	
        	   
	</LinearLayout>